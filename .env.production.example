# データベース設定
MONGODB_URI=mongodb://username:password@mongodb:27017/yosakoi_evaluation?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password

# Redis設定
REDIS_URL=redis://:password@redis:6379
REDIS_PASSWORD=your_redis_password

# JWT設定
JWT_SECRET=your_very_secure_jwt_secret_key_here

# YouTube API設定
YOUTUBE_API_KEY=your_youtube_api_key_here

# Grafana設定
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# AWS設定（Terraform用）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
ECR_REGISTRY=123456789012.dkr.ecr.ap-northeast-1.amazonaws.com

# SSL証明書設定
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 通知設定
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 本番環境設定
PROD_HOST=your.production.server.com
PROD_USER=deploy
PROD_SSH_KEY=your_ssh_private_key
PROD_URL=https://your.production.domain.com